-- Select the correct database
USE easypidbofficial;

-- Accounts Table
CREATE TABLE accounts (
    account_id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) NOT NULL UNIQUE,
    username VARCHAR(50) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    profile_picture VARCHAR(255),
    date_created TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    date_updated TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

-- Task Priority Levels Table
CREATE TABLE task_priority_levels (
    priority_id INT AUTO_INCREMENT PRIMARY KEY,
    priority_name VARCHAR(50) NOT NULL
);

-- Task Status Table
CREATE TABLE task_status (
    status_id INT AUTO_INCREMENT PRIMARY KEY,
    status_name VARCHAR(50) NOT NULL
);

-- Tasks Table
CREATE TABLE tasks (
    task_id INT AUTO_INCREMENT PRIMARY KEY,
    account_id INT NOT NULL,
    task_title VARCHAR(255) NOT NULL,
    task_description TEXT,
    priority_id INT NOT NULL,
    status_id INT NOT NULL,
    task_due_date DATE NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (account_id) REFERENCES accounts(account_id) ON DELETE CASCADE,
    FOREIGN KEY (priority_id) REFERENCES task_priority_levels(priority_id),
    FOREIGN KEY (status_id) REFERENCES task_status(status_id)
);

-- Default Priority Levels
INSERT INTO task_priority_levels (priority_name) VALUES
('Low'),
('Medium'),
('High');

-- Default Task Statuses
INSERT INTO task_status (status_name) VALUES
('Not Started'),
('In Progress'),
('Completed');
